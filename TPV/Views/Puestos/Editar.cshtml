@model TPV.Models.Puesto

@{
    ViewBag.Title = "Editar Puesto";
    Layout = "~/Views/Shared/_Layout3.cshtml";
}
<div class="page-header">
    <button onclick="atras()" class="btn btn-default pull-right">
        <i class="fa fa-chevron-left" style="color:#276aa4"></i>
        Atr&aacute;s
    </button>
    <h2>Editar Puesto: <ins>@Html.DisplayFor(model => model.Nombre)</ins></h2>
</div>

<form class="form-horizontal">
    <fieldset>
        @*<legend>
            </legend>*@
        <div class="form-group">
            @*@Html.LabelFor(m => m.Nombre, "Nombre", new { @class="col-lg-2 control-label"})*@
            <label for="Nombre" class="col-lg-2 control-label">Nombre</label>
            <div class="col-md-4">
                <input type="text" class="form-control" id="Nombre" placeholder="Nombre del Puesto">
            </div>
        </div>

        <div class="form-group">
            <label for="Descripcion" class="col-lg-2 control-label">Descripcion</label>
            <div class="col-md-4">
                <textarea class="form-control" rows="3" maxlength="160" id="Descripcion" placeholder="Breve descripción del Puesto"></textarea>
            </div>
        </div>

        <div class="form-group">
            <label for="Puesto" class="col-lg-2 control-label">Funciones</label>
            <div class="col-sm-3">
                <div class="input-group">
                    <input type="text" class="form-control" placeholder="Funcion del Puesto">
                    <span class="input-group-btn">
                        <button class="btn btn-primary" type="button">Agregar</button>
                    </span>
                </div>
                <div class="input-group">
                    <select class="form-control" id="Puesto">
                        <option>Hacer ....</option>
                        <option>Otro</option>
                    </select>
                    <span class="input-group-btn">
                        <button class="btn btn-danger" type="button"> Quitar  </button>
                    </span>
                </div>
            </div>
        </div>
        @*@Html.DropDownList("test",<test>,"Seleccione..")*@

        <div class="form-group">
            <label class="col-lg-2 control-label">Estado</label>
            <div class="col-lg-10">
                <div class="radio">
                    <label>
                        <input type="radio" name="Estado" id="Activo" value="Activo">
                        Activo
                    </label>
                    <label>
                        <input type="radio" name="Estado" id="Inactivo" value="Inactivo">
                        Inactivo
                    </label>
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-lg-10 col-lg-offset-2">
                <button type="reset" class="btn btn-default">Limpiar</button>
                <a href="/Puestos" class="btn btn-danger">Cancelar</a>
                <button type="submit" class="btn btn-primary">Crear Puesto</button>
            </div>
        </div>
    </fieldset>
</form>

