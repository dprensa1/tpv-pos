@model TPV.Models.Puesto

@{
    ViewBag.Title = "Crear";
    Layout = "~/Views/Shared/_Layout3.cshtml";
}

<div class="page-header">
    <button onclick="atras()" class="btn btn-default pull-right">
        <i class="fa fa-chevron-left" style="color:#276aa4"></i>
        Atr&aacute;s
    </button>
    <h2>Crear Puesto</h2>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.PuestoID)
    <div class="form-horizontal">
        <div class="form-group">
            @Html.LabelFor(model => model.Nombre, new { @class = "control-label col-lg-2" })
            <div class="col-md-4">
                @Html.TextBoxFor(model => model.Nombre, true, htmlAttributes: new { @class = "form-control", id = "Nombre", placeholder = "Nombre del Puesto", autofocus = "" })
            </div>
            <div class="col-sm-4">
                @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "label label-danger text-info" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Descripcion, new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @Html.TextAreaFor(model => model.Descripcion, new { @class = "form-control", id = "Descripcion", placeholder = "Breve descripción del Puesto", maxlength = "128" })
            </div>
            <div class="col-sm-4">
                @Html.ValidationMessageFor(model => model.Descripcion, "", new { @class = " label label-danger text-info" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Funciones, new { @class = "control-label col-lg-2" })
            <div class="col-md-4">
                @Html.TextAreaFor(model => model.Funciones, new { @class = "form-control", id = "Funciones", placeholder = "Funciones del Puesto", maxlength = "128" })
            </div>
            <div class="col-sm-4">
                @Html.ValidationMessageFor(model => model.Funciones, "", new { @class = " label label-danger text-info" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Estado, new { @class = "control-label col-lg-2" })
            <div class="col-lg-10">
                <div class="radio">
                    @Html.CheckBoxFor(model => model.Estado, new { Checked = "checked" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-lg-10 col-lg-offset-2">
                <a href="/Puestos" class="btn btn-danger">Cancelar</a>
                <input type="submit" class="btn btn-primary" value="Crear Puesto">
            </div>
        </div>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    </div>
}