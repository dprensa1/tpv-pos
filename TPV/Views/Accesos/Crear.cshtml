@model TPV.Models.Acceso   

@{
    ViewBag.Title = "Crear Acceso";
    Layout = "~/Views/Shared/_Layout3.cshtml";
}

<div class="page-header">
    <button onclick="atras()" class="btn btn-default pull-right">
        <i class="fa fa-chevron-left" style="color:#276aa4"></i>
        Atr&aacute;s
    </button>
    <h2>Crear Acceso</h2>
</div>

<form class="form-horizontal">
    <fieldset>
        <div class="form-group">
            <label for="Nombre" class="col-lg-2 control-label">Nombre</label>
            <div class="col-md-3">
                <input type="text" class="form-control" id="Nombre" placeholder="Nombre del Acceso" required autofocus>
            </div>
        </div>

        <div class="form-group">
            <label for="Descripcion" class="col-lg-2 control-label">Descripci&oacute;n</label>
            <div class="col-md-3">
                <textarea class="form-control" rows="2" id="Descripcion" placeholder="Describa el Acceso" maxlength="128"></textarea>
            </div>
        </div>

        <div class="form-group">
            <label for="Seccion" class="col-lg-2 control-label">Seccion</label>
            <div class="col-md-3">
                <div class="input-group">
                    @* Cuando se seleccion un elemento
                        * Hacer:
                            div addClass("input-group")
                            span removeClass("hidden")
                        * Despues de seleccionar:
                            muestra el elemento con las Vistas
                    *@
                    <select class="form-control" id="Puesto">
                        <option>Ventas</option>
                        <option>Productos</option>
                        <option>Reportes</option>
                        <option>Clientes</option>
                        <option>Administracion</option>
                        <option>Empleados</option>
                        <option>Usuarios</option>
                        <option>Puestos</option>
                        <option>Roles</option>
                        <option>Accesos</option>
                    </select>
                    <span class="input-group-addon">
                        <i class="fa fa-circle-o-notch fa-spin"></i>
                    </span>
                    <span class="input-group-addon hidden">
                        
                    </span>
                </div>
            </div>
        </div>

        <div class="form-group">
            <label for="Funciones" class="col-lg-2 control-label">Vistas</label>
            <div class="col-md-3">
                <div class="checkbox">
                    <label>
                        <input type="checkbox" onclick="seleccionarTodo(this)" name="Empleados" id="TodosEmpleados" value="Empleados" />Todos
                    </label>
                    <br />
                    <label>
                        <input type="checkbox" class="Selec" name="VerEmpleados" id="VerEmpleados" value="VerEmpleados" />Ver
                    </label>
                    <br />
                    <label>
                        <input type="checkbox" class="Selec" name="CrearEmpleados" id="CrearEmpleados" value="CrearEmpleados" />Crear
                    </label>
                    <br />
                    <label>
                        <input type="checkbox" class="Selec" name="EditarEmpleados" id="EditarEmpleados" value="EditarEmpleados" />Editar
                    </label>
                    <br />
                    <label>
                        <input type="checkbox" class="Selec" name="BorrarEmpleados" id="BorrarEmpleados" value="BorrarEmpleados" />Borrar
                    </label>
                </div>
            </div>
        </div>

        <div class="form-group">
            <label class="col-lg-2 control-label">Estado</label>
            <div class="col-lg-10">

                <div class="btn-group" data-toggle="buttons">
                    <label class="btn btn-default">
                        <input type="radio" name="Estado" id="Activo" autocomplete="on" checked required> Activo
                    </label>
                    <label class="btn btn-default">
                        <input type="radio" name="Estado" id="Inactivo" autocomplete="off" required> Inactivo
                    </label>
                </div>

                @*<div class="radio">
                        <label>
                            <input type="radio" name="Estado" id="Activo" value="Activo" required>
                            Activo
                        </label>
                        <label>
                            <input type="radio" name="Estado" id="Inactivo" value="Inactivo">
                            Inactivo
                        </label>
                    </div>*@
            </div>
        </div>

        <div class="form-group">
            <div class="col-lg-10 col-lg-offset-2">
                <button type="reset" class="btn btn-info">Limpiar</button>
                <button onclick="atras()" class="btn btn-danger">Cancelar</button>
                <button type="submit" class="btn btn-primary">Crear Acceso</button>
            </div>
        </div>
    </fieldset>
</form>
<script>

    function seleccionarTodo(source) {
        var chk = document.getElementsByClassName("Selec");
        for (i = 0; i < chk.length; i++)  if (chk[i].type == "checkbox") chk[i].checked = source.checked
    };

</script>