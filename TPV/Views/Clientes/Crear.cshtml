@model TPV.Models.Cliente

@{
    ViewBag.Title = "Crear Cliente ~ Persona";
    Layout = "~/Views/Shared/_Layout3.cshtml";
}

<div class="page-header">
    <button onclick="atras()" class="btn btn-default pull-right">
        <i class="glyphicon glyphicon-triangle-left"></i>
        Volver atras
    </button>
    <h2>Crear Cliente</h2>
</div>

