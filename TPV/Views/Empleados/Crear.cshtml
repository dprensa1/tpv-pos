@model TPV.Models.Empleado

@{
    ViewBag.Title = "Crear Empleado";
    Layout = "~/Views/Shared/_Layout3.cshtml";
}

<div class="page-header">
    <button onclick="atras()" class="btn btn-default pull-right">
        <i class="fa fa-chevron-left" style="color:#276aa4"></i>
        Atr&aacute;s
    </button>
    <h2>Crear Empleado</h2>
</div>

<form class="form-horizontal">
    <fieldset>
        @*<legend>
            </legend>*@
        <div class="form-group">
            @*@Html.LabelFor(m => m.Nombre, "Nombre", new { @class="col-lg-2 control-label"})*@
            <label for="Nombre" class="col-lg-2 control-label">Nombre</label>
            <div class="col-md-4">
                <input type="text" class="form-control" id="Nombre" placeholder="Nombre">
            </div>
        </div>

        <div class="form-group">
            <label for="Apellido" class="col-lg-2 control-label">Apellido</label>
            <div class="col-md-4">
                <input type="text" class="form-control" id="Apellido" placeholder="Apellido">
            </div>
        </div>

        <div class="form-group">
            <label class="col-lg-2 control-label">Sexo</label>
            <div class="col-lg-10">
                <div class="radio">
                    <label>
                        <input type="radio" name="Sexo" id="Femenino" value="F">
                        Femenino
                    </label>
                    <label>
                        <input type="radio" name="Sexo" id="Masculino" value="M">
                        Masculino
                    </label>
                </div>
            </div>
        </div>

        <div class="form-group">
            <label for="Cedula" class="col-lg-2 control-label">Fecha de Nacimiento</label>
            <div class="col-sm-2">
                <input type="date" class="form-control" id="FechaNacimiento">
            </div>
        </div>


        <div class="form-group">
            <label for="Cedula" class="col-lg-2 control-label">Cedula</label>
            <div class="col-sm-2">
                <input type="text" class="form-control" id="Cedula" placeholder=" 000-0000000-0">
            </div>
        </div>

        <div class="form-group">
            <label for="Telefono" class="col-lg-2 control-label">Telefono</label>
            <div class="col-sm-2">
                <input type="text" class="form-control" id="Telefono" placeholder=" 000-000-0000">
            </div>
        </div>

        <div class="form-group">
            <label for="Salario" class="col-lg-2 control-label">Salario</label>

            <div class="col-sm-2">
                <input type="text" class="form-control" id="Salario" placeholder="000,000.00">
            </div>
        </div>

        <div class="form-group">
            <label for="Puesto" class="col-lg-2 control-label">Puesto</label>
            <div class="col-sm-2">
                <select class="form-control" id="Puesto">
                    <option>Cajera</option>
                    <option>Supervisor</option>
                    <option>Gerente</option>
                    <option>Administrador</option>
                    <option>Otro</option>
                </select>
            </div>
        </div>

        <div class="form-group">
            <label class="col-lg-2 control-label">Fecha de Entrada</label>
            <div class="col-sm-2">
                <input type="date" class="form-control" id="FechaEntrada">
            </div>
        </div>
        
        <div class="form-group">
            <label class="col-lg-2 control-label">Estado</label>
            <div class="col-lg-10">
                <div class="radio">
                    <label>
                        <input type="radio" name="Estado" id="Activo" value="A">
                        Activo
                    </label>
                    <label>
                        <input type="radio" name="Estado" id="Inactivo" value="I">
                        Inactivo
                    </label>
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-lg-10 col-lg-offset-2">
                <button type="reset" class="btn btn-default">Limpiar</button>
                <button onclick="atras()" class="btn btn-default">Cancelar</button>
                <button type="submit" class="btn btn-primary">Crear Usuario</button>
            </div>
        </div>
    </fieldset>
</form>