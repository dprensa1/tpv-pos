@model TPV.Models.Empleado

@{
    ViewBag.Title = "Crear Empleado";
    Layout = "~/Views/Shared/_Layout3.cshtml";
}

<div class="page-header">
    <button onclick="atras()" class="btn btn-default pull-right">
        <i class="fa fa-chevron-left" style="color:#276aa4"></i>
        Atr&aacute;s
    </button>
    <h2>Crear Empleado</h2>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.EmpleadoID)

    <div class="form-horizontal">
        <div class="form-group">
            @Html.LabelFor(model => model.Nombre, "Nombre", new { @class = "col-lg-2 control-label" })
            <div class="col-md-4">
                @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control", id = "Nombre", placeholder = "Nombre" } })
            </div>
            <div class="col-sm-4">
                @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = " label label-danger text-info", pattern = "/[[:alpha:]]/+gi"})
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Apellido, "Apellido", new { @class = "col-lg-2 control-label" })
            <div class="col-md-4">
                @Html.EditorFor(model => model.Apellido, new { htmlAttributes = new { @class = "form-control", id = "Apellido", placeholder = "Apellido" } })
            </div>
            <div class="col-sm-4">
                @Html.ValidationMessageFor(model => model.Apellido, "", new { @class = "label label-danger text-info"})
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Sexo, "Sexo", new { @class = "col-lg-2 control-label" })
            <div class="col-md-4">
                <div class="radio">
                    <label>
                        <input type="radio" name="Sexo" id="Femenino" value="F">
                        Femenino
                    </label>
                    <label>
                        <input type="radio" name="Sexo" id="Masculino" value="M">
                        Masculino
                    </label>
                    @Html.ValidationMessageFor(model => model.Sexo, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="col-sm-4">
                @Html.ValidationMessageFor(model => model.Sexo, "", new { @class = "label label-danger text-info"})
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.FechaNacimiento, "Fecha de Nacimiento", new { @class = "col-lg-2 control-label" })
            <div class="col-sm-3">
                <input type="date" name="FechaNacimiento" id="FechaNacimiento" class="form-control">
            </div>
            <div class="col-sm-4">
                @Html.ValidationMessageFor(model => model.FechaNacimiento, "", new { @class = "label label-danger text-info"})
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Cedula, "Cedula", new { @class = "col-lg-2 control-label" })
            <div class="col-sm-3">
                @Html.EditorFor(model => model.Cedula, new { htmlAttributes = new { @class = "form-control", id = "Cedula", placeholder = "000-0000000-0" } })
            </div>
            <div class="col-sm-4">
                @Html.ValidationMessageFor(model => model.Cedula, "", new { @class = "label label-danger text-info"})
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Telefono, "Telefono", new { @class = "col-lg-2 control-label" })
            <div class="col-sm-3">
                @Html.EditorFor(model => model.Telefono, new { htmlAttributes = new { @class = "form-control", id = "Telefono", placeholder = "000-000-0000" } })
            </div>
            <div class="col-sm-4">
                @Html.ValidationMessageFor(model => model.Telefono, "", new { @class = "label label-danger text-info"})
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Salario, "Salario", new { @class = "col-lg-2 control-label" })
            <div class="col-sm-3">
                @Html.EditorFor(model => model.Salario, new { htmlAttributes = new { @class = "form-control", id = "Salario", placeholder = "000,000.00" } })
            </div>
            <div class="col-sm-4">
                @Html.ValidationMessageFor(model => model.Salario, "", new { @class = "label label-danger text-info"})
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.PuestoID, "Puesto", new { @class = "col-lg-2 control-label" })
            <div class="col-sm-3">
                @Html.DropDownListFor(model => model.PuestoID, (IEnumerable<SelectListItem>)ViewBag.Puestos, "Seleccione..", new { @class = "form-control" })
            </div>
            <div class="col-sm-4">
                @Html.ValidationMessageFor(model => model.PuestoID, "", new { @class = "label label-danger text-info"})
            </div>
        </div>

        @Html.HiddenFor(model => model.Codigo)

        <div class="form-group">
            @Html.LabelFor(model => model.FechaEntrada, "Fecha de Entrada", new { @class = "col-lg-2 control-label" })
            <div class="col-sm-3">
                <input type="date" class="form-control" id="FechaEntrada">
            </div>
            <div class="col-sm-4">
                @Html.ValidationMessageFor(model => model.FechaEntrada, "", new { @class = "label label-danger text-info"})
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Activo, new { @class = "control-label col-lg-2" })
            <div class="col-sm-3">
                <div class="radio">
                    @Html.CheckBoxFor(model => model.Activo)
                </div>
            </div>
            <div class="col-sm-4">
                @Html.ValidationMessageFor(model => model.Activo, "", new { @class = "label label-danger text-info"})
            </div>
        </div>

        <div class="form-group">
            <div class="col-lg-10 col-lg-offset-2">
                <button onclick="atras()" class="btn btn-danger">Cancelar</button>
                <button type="submit" class="btn btn-primary">Crear Usuario</button>
            </div>
        </div>
    </div>
}