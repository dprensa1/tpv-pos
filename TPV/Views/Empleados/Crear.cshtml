@model TPV.Models.Empleado

@{
    ViewBag.Title = "Crear Empleado";
    Layout = "~/Views/Shared/_Layout3.cshtml";
}

<div class="page-header">
    <button onclick="atras()" class="btn btn-default pull-right">
        <i class="fa fa-chevron-left" style="color:#276aa4"></i>
        Atr&aacute;s
    </button>
    <h2>Crear Empleado</h2>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.EmpleadoID)
    <div class="form-horizontal">
        <div class="form-group">
            @Html.LabelFor(model => model.Nombre, "Nombres", new { @class = "col-lg-2 control-label"})
            <div class="col-md-4">
                @Html.TextBoxFor(model => model.Nombre, true, htmlAttributes: new { @class = "form-control", id = "Nombre", placeholder = "Nombres"})
            </div>
            <div class="col-sm-4">
                @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = " label label-danger text-info"})
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Apellido, "Apellidos", new { @class = "col-lg-2 control-label" })
            <div class="col-md-4">
                @Html.TextBoxFor(model => model.Apellido, true, htmlAttributes: new { @class = "form-control", id = "Apellido", placeholder = "Apellidos" })
            </div>
            <div class="col-sm-4">
                @Html.ValidationMessageFor(model => model.Apellido, "", new { @class = "label label-danger text-info" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Sexo, "Sexo", new { @class = "col-lg-2 control-label" })
            <div class="col-md-4">
                <div class="radio">
                    <label>
                        @Html.RadioButtonFor(model => model.Sexo, "F") Femenino

                        @*<input type="radio" name="Sexo" id="Femenino" value="F" data-msg-required="Requerido." data-rule-required="true" aria-required="true" aria-describedby="Sexo-error" aria-invalid="true" required>
            Femenino*@
                    </label>
                    <label>
                        @Html.RadioButtonFor(model => model.Sexo, "M") Masculino

                        @*<input type="radio" name="Sexo" id="Masculino" value="M" data-msg-required="Requerido." data-rule-required="true" aria-required="true" aria-describedby="Sexo-error" aria-invalid="true" required>
            Masculino*@
                    </label>
                </div>
            </div>
            <div class="col-sm-4">
                @Html.ValidationMessageFor(model => model.Sexo, "", new { @class = "label label-danger text-info" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.FechaNacimiento, "Fecha de Nacimiento", new { @class = "col-lg-2 control-label" })
            <div class="col-sm-3">
                @Html.TextBoxFor(model => model.FechaNacimiento, new { type = "date", @class = "form-control Fecha"})
                @*<input type="date" name="FechaNacimiento" id="FechaNacimiento" class="form-control Fecha" data-msg-required="Requerida." data-msg-pattern="Solo puede contener numeros." data-rule-pattern="^([0-9])+\w$" data-rule-required="true" aria-required="true" aria-describedby="FechaNacimiento-error" aria-invalid="true" value="@DateTime.Today.ToString("yyyy-MM-dd")" required >*@
            </div>
            <div class="col-sm-4">
                @Html.ValidationMessageFor(model => model.FechaNacimiento, "", new { @class = "label label-danger text-info" })
            </div>
        </div>

        @*has-success has-feedback*@
        <div class="form-group">
            @Html.LabelFor(model => model.Cedula, "Cedula", new { @class = "col-lg-2 control-label" })
            <div class="col-sm-3">
                @Html.TextBoxFor(model => model.Cedula, true, htmlAttributes: new { @class = "form-control Cedula", id = "Cedula", placeholder = "000-0000000-0" })
                <span class="text-muted">Sin Guiones.</span>
            </div>
            <div class="col-sm-4">
                @Html.ValidationMessageFor(model => model.Cedula, "", new { @class = "label label-danger text-info" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Telefono, "Telefono / Celular", new { @class = "col-lg-2 control-label" })
            <div class="col-sm-3">
                @Html.TextBoxFor(model => model.Telefono, true, htmlAttributes: new { @class = "form-control Telefono", id = "Telefono", placeholder = "8092223344" })
                <span class="text-muted">Sin Guiones.</span>
            </div>
            <div class="col-sm-4">
                @Html.ValidationMessageFor(model => model.Telefono, "", new { @class = "label label-danger text-info" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Salario, "Salario", new { @class = "col-lg-2 control-label" })
            <div class="col-sm-3">
                @Html.TextBoxFor(model => model.Salario, true, htmlAttributes: new { @class = "form-control Salario", id = "Salario", placeholder = "123,456.78"})
            </div>
            <div class="col-sm-4">
                @Html.ValidationMessageFor(model => model.Salario, "", new { @class = "label label-danger text-info" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.PuestoID, "Puesto", new { @class = "col-lg-2 control-label" })
            <div class="col-sm-3">
                @Html.DropDownListFor(model => model.PuestoID, (IEnumerable<SelectListItem>)ViewBag.Puestos, "Seleccione..", new { @class = "form-control" })
            </div>
            <div class="col-sm-4">
                @Html.ValidationMessageFor(model => model.PuestoID, "", new { @class = "label label-danger text-info" })
            </div>
        </div>

        @Html.HiddenFor(model => model.Codigo)

        <div class="form-group">
            @Html.LabelFor(model => model.FechaEntrada, "Fecha de Entrada", new { @class = "col-lg-2 control-label" })
            <div class="col-sm-3">
                <input type="date" class="form-control" id="FechaEntrada" max="@DateTime.Today.ToString("yyyy/MM/dd")" value="@DateTime.Today.ToString("yyyy/MM/dd")">
            </div>
            <div class="col-sm-4">
                @Html.ValidationMessageFor(model => model.FechaEntrada, "", new { @class = "label label-danger text-info" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Estado, new { @class = "control-label col-lg-2" })
            <div class="col-sm-3">
                <div class="radio">
                    @Html.CheckBoxFor(model => model.Estado , new { Checked = "checked" })
                </div>
            </div>
            <div class="col-sm-4">
                @Html.ValidationMessageFor(model => model.Estado, "", new { @class = "label label-danger text-info" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-lg-10 col-lg-offset-2">
                <button onclick="atras()" class="btn btn-danger">Cancelar</button>
                <button type="submit" class="btn btn-primary">Crear Usuario</button>
            </div>
        </div>
    </div>
}

<script language="text/javascript">
    $('document').ready(function () {
        $("#Nombre").focus();
    });

    /*
    $('document').ready(function () {
        $('.Cedula').mask("000-0000000-0", { placeholder: "___-_______-_" });
        $('.Telefono').mask("000-000-0000", { placeholder: "___-___-____" });
        $('.Salario').mask("000,000.00", { placeholder: "___,___.__" });
    });
    */

    $('input, select, textarea').keypress(function (event) {
        if (event.keyCode == 10 || event.keyCode == 13) {
            $(this).closest('div').next('div').find(':first-child').focus();
            event.preventDefault();
        }
    });
</script>