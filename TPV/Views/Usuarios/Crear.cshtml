@model TPV.Models.Usuario
@{
    ViewBag.Title = "Crear Usuario";
    Layout = "~/Views/Shared/_Layout3.cshtml";
}

<div class="page-header">
    <button onclick="atras()" class="btn btn-default pull-right">
        <i class="glyphicon glyphicon-triangle-left"></i>
        Volver atras
    </button>
    <h2>Crear Usuario</h2>
</div>
<form class="form-horizontal">
    <fieldset>
        @*<legend>
            </legend>*@

        <div class="form-group">
            <label for="Empleados" class="col-lg-2 control-label">Empleado</label>
            <div class="col-md-3">
                <select class="form-control" id="Empleados">
                    <option>Seleccione...</option>
                    <option>Maria + Perez</option>
                    <option>Maria + Perez</option>
                    <option>Maria + Perez</option>
                    <option>Otro</option>
                </select>
            </div>
        </div>

        <div class="form-group">
            @*@Html.LabelFor(m => m.Nombre, "Nombre", new { @class="col-lg-2 control-label"})*@
            <label for="Puesto" class="col-lg-2 control-label">Puesto</label>
            <div class="col-md-4">
                <input type="text" class="form-control" id="Puesto" value="PROBANDO" disabled>
            </div>
        </div>

        <div class="form-group">
            @*@Html.LabelFor(m => m.Nombre, "Nombre", new { @class="col-lg-2 control-label"})*@
            <label for="Usuario" class="col-lg-2 control-label">Usuario</label>
            <div class="col-md-4">
                <input type="text" class="form-control" id="Usuario" placeholder="Nombre de Usuario">
            </div>
        </div>

        <div class="form-group">
            <label for="Clave" class="col-lg-2 control-label">Clave</label>
            <div class="col-md-4">
                <input type="text" class="form-control" id="Clave" placeholder="Clave">
            </div>
        </div>

        <div class="form-group">
            <label for="Funciones" class="col-lg-2 control-label">Accesos</label>
            <div class="col-md-3">
                <select multiple class="form-control" id="Funciones">
                    <option>Seleccione...</option>
                    <option>Empleados - Todos</option>
                    <option>Productos - Ver</option>
                    <option>Puestos - Ver</option>
                    <option>Otro</option>
                </select>
            </div>
        </div>

        <div class="form-group">
            <label class="col-lg-2 control-label">Estado</label>
            <div class="col-lg-10">
                <div class="radio">
                    <label>
                        <input type="radio" name="Estado" id="Activo" value="Activo">
                        Activo
                    </label>
                    <label>
                        <input type="radio" name="Estado" id="Inactivo" value="Inactivo">
                        Inactivo
                    </label>
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-lg-10 col-lg-offset-2">
                <button type="reset" class="btn btn-default">Limpiar</button>
                <button onclick="atras()" class="btn btn-default">Cancelar</button>
                <button type="submit" class="btn btn-primary">Crear Usuario</button>
            </div>
        </div>
    </fieldset>
</form>