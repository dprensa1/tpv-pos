@model TPV.Models.Puesto

@{
    ViewBag.Title = "Crear Puesto";
    Layout = "~/Views/Shared/_Layout3.cshtml";
}

<div class="page-header">
    <button onclick="atras()" class="btn btn-default pull-right">
        <i class="fa fa-chevron-left" style="color:#276aa4"></i>
        Atr&aacute;s
    </button>
    <h2>Crear Puesto</h2>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.Nombre, htmlAttributes: new { @class = "col-lg-2 control-label"})
        <div class="col-md-4">
            @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control", id = "Nombre", placeholder = "Nombre del Puesto"}})
            @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger"})
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Descripcion, htmlAttributes: new { @class = "col-lg-2 control-label"})
        <div class="col-md-4">
            @Html.EditorFor(model => model.Descripcion, new { htmlAttributes = new { @class = "form-control", id = "Descripcion", placeholder = "Breve descripción del Puesto"}})
            @Html.ValidationMessageFor(model => model.Descripcion, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Funciones, "Funciones", new { @class = "col-lg-2 control-label" })
        <div class="col-sm-3">
            <div class="input-group">
                @Html.TextBox("Funcion", "", new { @class = "form-control", placeholder = "Funcion del Puesto", id = "TxtFuncion" })
                <span class="input-group-btn">
                    <input class="btn btn-primary" type="button" onclick="AddFuncion()" id="BtnAddFuncion" value="Agregar">
                </span>
            </div>
            <div class="input-group">
                <select class="form-control" id="Funciones" required></select>
                <span class="input-group-btn">
                    <input class="btn btn-danger" type="button" onclick="DelFuncion()" id="DelAddFuncion" value=" Quitar  ">
                </span>
            </div>
        </div>
    </div>
    @* @Html.DropDownList("test",<test>,"Seleccione..")*@

    <div class="form-group">
        <label class="col-lg-2 control-label">Estado</label>
        <div class="col-lg-10">
            <div class="radio">
                <label>
                    <input type="radio" name="Estado" id="Activo" value="Activo">
                    Activo
                </label>
                <label>
                    <input type="radio" name="Estado" id="Inactivo" value="Inactivo">
                    Inactivo
                </label>
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="col-lg-10 col-lg-offset-2">
            <button type="reset" class="btn btn-default">Limpiar</button>
            <a href="/Puestos" class="btn btn-danger">Cancelar</a>
            <button type="submit" class="btn btn-primary">Crear Puesto</button>
        </div>
    </div>

    <script>
        function AddFuncion() {
            var option = document.createElement("option");
            option.value = $("#Funcion").val();
            option.text = $("#Funcion").val();
            document.getElementById("Funciones").add(option);
            document.getElementById("Funciones").focus();
            $("#Funcion").val("");
        }

        function DelFuncion() {
            var x = document.getElementById("Funciones");
            x.remove(x.selectedIndex);
            document.getElementById("Funciones").focus();
        }
    </script>